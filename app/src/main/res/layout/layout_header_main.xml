<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:id="@+id/rlHeader"
    android:layout_height="wrap_content" android:background="@color/colorWhite">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@color/colorBackgroundHeader" />

    <include
        android:id="@+id/include"
        layout="@layout/layout_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:layout_marginTop="5.5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txtNamaMerchant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:text="J.Co Donuts &amp; Coffee Giant Ekstra" />

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:layout_marginTop="1.3dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:id="@+id/txtAlamatMerchant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNamaMerchant"
        android:layout_centerHorizontal="true"
        android:text="Jl. Ahmad Yani KM 5. Banjarmasin" />

    <TextView
        android:textColor="@color/grey"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:layout_marginTop="5.5dp"
        android:layout_marginBottom="5.5dp"
        android:textSize="15.5sp"
        android:id="@+id/txtDeskripsiMerchant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAlamatMerchant"
        android:layout_centerHorizontal="true"
        android:text="J.Co Donuts adalah restoran dan waralaba yang mengkhususkan dalam donat, yogurt beku dan kopi" />

</RelativeLayout>