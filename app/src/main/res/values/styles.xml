<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_linotte</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/font_linotte</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SplashScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/logo</item>
    </style>
    <style name="SpinnerPadding" parent="@android:style/Widget.TextView.SpinnerItem">
        <!--<item name="android:layout_margin">50dp</item>-->
        <!--<item name="android:padding">50dp</item>-->
        <!--<item name="android:paddingStart">8dp</item>-->
        <!--<item name="android:paddingEnd">8dp</item>-->
    </style>
    <style name="spinnerStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:layout_margin">50dp</item>
        <item name="android:padding">50dp</item>
    </style>
</resources>
