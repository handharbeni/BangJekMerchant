<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="illiyin.mhandharbeni.bangjekmerchant">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_login"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".splashpackage.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".mainpackage.MainClass"
            android:label="@string/title_activity_main_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".accountpackage.SigninClass"
            android:label="@string/title_activity_main_class"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".accountpackage.SignupClass"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main_class"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".mainpackage.subactivity.DetailMenu"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main_class"
            android:parentActivityName=".mainpackage.MainClass" />
        <activity
            android:name=".mainpackage.subactivity.UpdateMenu"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main_class"
            android:parentActivityName=".mainpackage.MainClass" />
    </application>

</manifest>